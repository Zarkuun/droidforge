# Colors for the common scales
COLOR_SCALE_PHRYGIAN        = 1.1
COLOR_SCALE_MINOR           = 1.2
COLOR_SCALE_DORIAN          = 0.2
COLOR_SCALE_MIXOLYDIAN      = 0.73
COLOR_SCALE_MAJOR           = 0.4
